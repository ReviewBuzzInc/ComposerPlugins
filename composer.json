{
	"name": "review-buzz/composer-plugins",
	"type": "composer-plugin",
	"description": "Composer plugin for installing PHP_CodeSniffer standards",
	"keywords": ["PHP_CodeSniffer", "phpcs", "standards"],
	"license": "LGPL-3.0+",
	"authors": [
		{
			"name": "Rens Admiraal",
			"email": "rens@simplyadmire.com",
			"role": "lead"
		},
		{
			"name": "Denis Poltoratskiy",
			"email": "denis@reviewbuzz.com",
			"role": "maintainer"
		}
	],
	"autoload": {
		"psr-0": {
			"SimplyAdmire\\ComposerPlugins": ""
		}
	},
	"extra": {
		"class": [
			"SimplyAdmire\\ComposerPlugins\\PhpCodesnifferStandardInstallerPlugin"
		]
	},
	"require": {
		"composer-plugin-api": "^1.1",
		"squizlabs/php_codesniffer": "*"
	},
}
